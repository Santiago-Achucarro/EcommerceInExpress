   {{>navStore}}

    <!-- BOX DE PRODUCTOS -->


    <section class="contenedor-pr ">
      <div class="box-prod bg-secondary bg-opacity-50 rounded-2">
        <div class="carro">

          <div class="cantidades" >
            <p class="fs-5 m-0">Cantidad</p>
            <ol class="fs-6 m-0 p-0" id="cantidades">
              
            </ol>
          </div>

          <div class="unidad" >
            <p class="fs-5 m-0">Unidad</p>
            <ol class="fs-6 m-0 p-0"  id="unidad">
            
            </ol>
          </div>

          <div class="valores" >
            <p class="fs-5 m-0">Valor</p>
            <ol class="fs-6 m-0 p-0" id="valores">
           
            </ol>
          </div>
        </div>
      </div>
    </section>

    <!-- HEADER END-->

    <!-- FILTRADOR DE PRODUCTOS -->
 <form class="d-flex col-3 m-auto mt-2 " role="search">
